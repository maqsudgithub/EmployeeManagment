@model IEnumerable<EmployeeManagment.Models.Employee>

@{
    ViewData["Title"] = "EmployeeList";
}

<style>
    .avatar{
        vertical-align:middle;
        width:50px;
        height:50px;
        border-radius:50%;
    }
    #wid{
        width:350px;
    }
</style>
<h1>EmployeeList</h1>

<p style="float:right">
    <a asp-action="Create" class="btn btn-primary">Add New</a>
</p><br />
<div class="col-4 p-0 justify-content-end">
	<form asp-controller="Employee" asp-action="EmployeeList">
		<span class="btn-group">
			<input class="form-control" type="text" name="SearchText" placeholder="--Searching By Name--" id="wid" />
			<input class="btn btn-success pb-l-4" type="submit" value="Search" />
		</span>
	</form>
</div>
<br />
<table class="table">
    <thead id="tablehead">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr id="trow">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @*<img src="@Url.Content(item.Image)" width="50" height="50" class="img-rounded" />*@
                @*<img src="@item.Image" alt="" class="avatar">*@
                

                 <img class="rounded-circle mt-2 mb-2" id="imgPreview" src="@Url.Content("~/image")/@item.Image" alt="" style="height:50px;width:50px">
            </td>
            <td>
                
                <form>
						@Html.ActionLink("Edit", "Create", new {  id=item.ID, item.Name, item.FName, item.Email, item.Contact, item.Designation, item.Date, item.Image },new {@class="btn btn-success"}) |

						@*<a asp-action="Details"  asp-route-id="@item.ID" >Details</a> *@

							<button type="submit" formmethod="get" class="btn btn-danger " asp-controller="Employee" asp-action="EmployeeDetail" asp-route-id=@item.ID >
							Detail
							</button> |
						

						<button type="submit" formmethod="get" class="btn btn-danger " asp-controller="Employee" asp-action="Delete" asp-route-id=@item.ID ,
							onclick="return confirm('Are you want to delete...? : @item.Name ')">
							Delete
						</button>
					</form>
                @*<a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
